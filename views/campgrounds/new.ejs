<% include ../partials/header %>
   
        <div class="row">

            <h1 style="text-align:center;">Create a new campground</h1>
            <div style="width:30%;margin: 25px auto;">
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" value="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Price/Night" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="img" placeholder="Image url" value="">
                    </div>
                    <div class="form-group">
                            <label for="location">Location</label>
                            <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                        </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="desc" placeholder="Site description" value="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-primary btn-lg" type="submit">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>

            </div>
        </div>
    
    <% include ../partials/footer %>